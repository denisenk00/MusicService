<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout>
                <pattern>%d{yyyy-MM-dd HH:mm:ss} [%p]  [%t]  %-50c{1.} - %msg %n</pattern>
            </PatternLayout>
        </Console>

        <File name="File" fileName="./src/main/resources/log/logs.log" >
            <PatternLayout>
                <pattern>%d{yyyy-MM-dd HH:mm:ss} [%p]  [%t]  %-50c{1.} - %msg %n</pattern>
            </PatternLayout>
        </File>
    </Appenders>

    <Loggers>
        <Root level="debug">
            <AppenderRef ref="Console" />
            <AppenderRef ref="File" />
        </Root>
    </Loggers>

</Configuration>